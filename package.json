{
  "name": "quizzy-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run --filter web dev",
    "build": "bun run --filter web build",
    "start": "bun run --filter web start",
    "lint": "bun run --filter web lint",
    "prisma:generate": "bun run --filter @quizzy/prisma generate"
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "typescript": "^5"
  }
}
