generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum QuizDifficulty {
  easy
  medium
  hard
}

model Quiz {
  id String @id @default(cuid())

  // SEO / page
  quizPageTitle       String   @unique
  quizPageDescription String
  category            String
  tags                String[]

  // Meta
  difficulty  QuizDifficulty
  title       String
  description String

  // Extra basics
  slug        String    @unique
  isPublished Boolean   @default(false)
  publishedAt DateTime?
  views       Int       @default(0)

  // Relations
  questions Question[]

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([difficulty])
  @@index([createdAt])
  @@index([isPublished])
}

model Question {
  id     String @id @default(cuid())
  quizId String
  quiz   Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)

  prompt       String
  options      String[]
  correctIndex Int
  explanation  String?
  tags         String[] @default([])

  createdAt DateTime @default(now())
}
